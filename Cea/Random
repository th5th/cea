	// Debug RVar - not even vaguely random...
	template <typename T>
	class DebugRVar : public RVar<T>
	{
		public:
			void set(T x0, T st) { x = x0; step = st; };
			T rand()
			{
			       T rv = x;
			       x += step;
			       return rv;
			}

		private:
			// Fake state stored here.
			T x, step;
	};
}

#endif // CEA_RANDOM_H
