#ifdef CEA_DEBUG
	// Debug RVar - testing only.
	template <typename T>
	class DebugRVar : public RVar<T>
	{
		public:
            DebugRVar(std::vector<T> op) : output(op)
            {
                i = 0;
            }

			T rand()
			{
                // Keeps i in range, and increments.
                return output[ (i >= output.size() ? i = 0 : i)++ ];
			}

		private:
			// Fake state stored here.
            std::vector<T> output;
            uint32_t i;
	};
#endif // CEA_DEBUG
}

#endif // CEA_RANDOM_HPP
